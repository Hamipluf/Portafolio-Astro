---
import ProjectAnimated from "@/components/ProjectAnimated";
import project_data_es from "@/utils/project-data-es.json";
import project_data_en from "@/utils/project-data-en.json";
import Layout from "@/layouts/Layout.astro";
let project_data;
const { currentLocale } = Astro;
currentLocale === "en"
  ? (project_data = project_data_en)
  : (project_data = project_data_es);
---

<Layout title="Portafolio">
  <section id="Projects" class="ml-16 w-[95vw] max-h-screen scrollbar_base">
    <ProjectAnimated
      projects={project_data}
      currentLocale={currentLocale}
      client:idle
    />
  </section>
</Layout>
